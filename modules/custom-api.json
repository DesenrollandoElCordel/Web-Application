{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Custom API",
        "description": "This is the place to add your own path endpoints"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url":"http://localhost:8080/exist/apps/projet-cordel"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/api/manifest": {
            "get": {
                "summary": "IIIF Manifest",
                "description": "Retrieve a manifest in format required by Mirador",
                "operationId": "custom:manifest",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Pliegos/Moreno_007.xml"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Manifests to display",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "manifest": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }                
            }
        },
        
        "/api/manifests-list": {
            "get": {
                "summary": "IIIF manifests list",
                "description": "Get a list of manifests",
                "operationId": "custom:manifests-list",
                "responses": {
                    "200": {
                        "description": "List of manifests",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "list": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}